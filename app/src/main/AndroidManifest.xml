<!--                <action android:name="android.intent.action.SEND" />-->
<!--                <category android:name="android.intent.category.DEFAULT" />-->
<!--                <data android:mimeType="text/plain" />-->
<!--            </intent-filter>-->

        </activity>
    </application>

</manifest>
